#!/bin/bash
# ==========================
# BSPWM CONFIG CONVERTIDO DE HYPRLAND
# ==========================

# Variables de programas
TERMINAL="kitty"
FILEMANAGER="dolphin"
BROWSER="firefox"
MENU="$HOME/.config/rofi/launchers/type-5/launcher.sh"

# ==========================
# MONITORES
# ==========================
# Ajusta según tus monitores, equivalente de monitor=DP-1/2,...
xrandr --output DP-1 --primary --mode 2560x1440 --pos 0x0 --rate 60
xrandr --output DP-2 --mode 1600x900 --pos -1600x0 --rate 60

# ==========================
# GAPS Y BORDERS
# ==========================
bspc config border_width 1
bspc config window_gap 5
bspc config outer_gap 7
bspc config focused_border_color "#ffffff"
bspc config normal_border_color "#808080"

# Layout predeterminado
bspc config split_ratio 0.5
bspc config layout dwindle

# ==========================
# AUTOSTART
# ==========================
# Barra, wallpaper y demonios
~/.config/polybar/launch.sh &
swww-daemon &

# ==========================
# ENV VARIABLES
# ==========================
export XCURSOR_SIZE=24
export HYPRCURSOR_SIZE=24
export XDG_CURRENT_DESKTOP=BSPWM
export XDG_SESSION_TYPE=x11
export XDG_SESSION_DESKTOP=BSPWM
export MOZ_ENABLE_WAYLAND=1
export QT_QPA_PLATFORMTHEME=qt6ct
export QT_QPA_PLATFORM=xcb
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export GDK_SCALE=1

# ==========================
# WALLPAPER
# ==========================
# Selecciona tu fondo con feh
feh --bg-scale ~/Desktop/Cl4rk/.config/bspwm/Wallpaper/solo-leveling-game-3840x2160-17908.jpeg

# ==========================
# REGLAS DE VENTANAS
# ==========================
# Ignorar maximize requests
bspc rule -a \* state=floating
bspc rule -a \* focus=on

# ==========================
# OTROS
# ==========================
# Pseudotiling / master layout equivalente
# dwindle pseudotile / preserve_split se gestiona automáticamente con bspwm

