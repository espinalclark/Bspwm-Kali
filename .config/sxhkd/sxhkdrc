# ==========================
# SXHKD CONFIG CONVERTIDO DE HYPRLAND
# ==========================

# Mod key
super = SUPER

# Terminal
super + Return
    $TERMINAL

# File manager
super + E
    $FILEMANAGER

# Browser
super + F
    $BROWSER

# Rofi launcher
super + SPACE
    $MENU

# Cerrar ventana
super + Q
    bspc node -c

# Salir BSPWM
super + M
    bspc quit

# Toggle floating
super + V
    bspc node -t floating

# Move focus
super + Left
    bspc node -f west
super + Right
    bspc node -f east
super + Up
    bspc node -f north
super + Down
    bspc node -f south

# Mover ventana a workspace
super + shift + 1
    bspc node -m desktop=^1
super + shift + 2
    bspc node -m desktop=^2
super + shift + 3
    bspc node -m desktop=^3
super + shift + 4
    bspc node -m desktop=^4
super + shift + 5
    bspc node -m desktop=^5
super + shift + 6
    bspc node -m desktop=^6
super + shift + 7
    bspc node -m desktop=^7
super + shift + 8
    bspc node -m desktop=^8
super + shift + 9
    bspc node -m desktop=^9
super + shift + 0
    bspc node -m desktop=^10

# Cambiar workspace
super + 1
    bspc desktop -f ^1
super + 2
    bspc desktop -f ^2
super + 3
    bspc desktop -f ^3
super + 4
    bspc desktop -f ^4
super + 5
    bspc desktop -f ^5
super + 6
    bspc desktop -f ^6
super + 7
    bspc desktop -f ^7
super + 8
    bspc desktop -f ^8
super + 9
    bspc desktop -f ^9
super + 0
    bspc desktop -f ^10

# Multimedia y brillo
XF86AudioRaiseVolume
    wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+
XF86AudioLowerVolume
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
XF86AudioMute
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
XF86AudioMicMute
    wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
XF86MonBrightnessUp
    brightnessctl -e4 -n2 set 5%+
XF86MonBrightnessDown
    brightnessctl -e4 -n2 set 5%-

# Playerctl
XF86AudioNext
    playerctl next
XF86AudioPause
    playerctl play-pause
XF86AudioPlay
    playerctl play-pause
XF86AudioPrev
    playerctl previous

# Screenshots (grim -> scrot o maim si no tienes wayland)
Print
    scrot ~/Pictures/screenshots/screenshot_%Y%m%d_%H%M%S.png

